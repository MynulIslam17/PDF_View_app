<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashBoard"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book Collection "
        android:textSize="40sp"
        android:textColor="#D50000"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        />


      <View
          android:layout_width="match_parent"
          android:layout_height="3dp"
          android:background="#000"
          android:layout_marginHorizontal="30dp"
          android:layout_marginBottom="20dp"
          />


    <!--book collection start-->
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:weightSum="3"
       android:layout_marginHorizontal="10dp"
       >

       <!--1st row-->
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:weightSum="2"
           android:orientation="horizontal"
           android:layout_marginBottom="20dp"
           >
           <!--1st book-->
           <LinearLayout
               android:id="@+id/book1"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:orientation="vertical"
               android:background="@drawable/bottom_shade"
               android:weightSum="4"
               android:layout_marginRight="10dp"
               >

               <ImageView
                   android:id="@+id/img1"
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="3"
                   android:src="@drawable/alibaba"
                   android:layout_marginTop="10dp"


                   />

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   android:maxLines="2"
                   android:text="Alibaba and 40 chor"
                   android:gravity="center"
                   android:textSize="18sp"
                   android:textColor="#000"
                   />


           </LinearLayout>

           <!--2nd book-->
           <LinearLayout
               android:id="@+id/book2"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:orientation="vertical"
               android:weightSum="4"
               android:background="@drawable/bottom_shade"

               >


                <ImageView

                   android:id="@+id/img2"
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="3"
                   android:src="@drawable/spoken_englis"
                   android:layout_marginTop="10dp"


                   />

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   android:maxLines="2"
                   android:text="Spolen English "
                   android:gravity="center"
                   android:textSize="18sp"
                   android:textColor="#000"
                   />



           </LinearLayout>





       </LinearLayout>



       <!--2nd row-->
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:weightSum="2"
           android:orientation="horizontal"
           >

           <!--3rd book-->
           <LinearLayout
               android:id="@+id/book3"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:orientation="vertical"
               android:weightSum="4"
               android:background="@drawable/bottom_shade"
               android:layout_marginRight="10dp"
               >
               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="3"
                   android:src="@drawable/twisted"
                   android:layout_marginTop="10dp"
                   />

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   android:text="Twisted Hate"
                   android:textSize="18sp"
                   android:maxLines="2"
                   android:gravity="center"
                   android:textColor="#000"
                   />




           </LinearLayout>


           <!--4th book-->
           <LinearLayout
               android:id="@+id/book4"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:orientation="vertical"
               android:weightSum="4"
               android:background="@drawable/bottom_shade"
               >
               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="3"
                   android:src="@drawable/arabya_rajani"
                   android:layout_marginTop="10dp"
                   />

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   android:text="Arabya Rajani"
                   android:textSize="18sp"
                   android:maxLines="2"
                   android:gravity="center"
                   android:textColor="#000"
                   />




           </LinearLayout>








       </LinearLayout>


       <!--3rd row-->
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           >
       </LinearLayout>






   </LinearLayout>


</LinearLayout>